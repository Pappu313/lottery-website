    <script>
        // Update time every minute
        function updateTime() {
            const now = new Date();
            let hours = now.getHours();
            let minutes = now.getMinutes();
            
            // Format time as 3:15 style
            minutes = minutes < 10 ? '0' + minutes : minutes;
            
            // For demonstration, we'll keep it as 3:15 as shown in the image
            // For real time: document.querySelector('.time').textContent = `${hours}:${minutes}`;
        }
        
        // Update time initially and then every minute
        updateTime();
        setInterval(updateTime, 60000);
        
        // Add click functionality to navigation items
        document.querySelectorAll('.nav-item, .category-tab, .bottom-nav-item').forEach(item => {
            item.addEventListener('click', function() {
                // Remove active class from all items in the same container
                const parent = this.parentElement;
                parent.querySelectorAll('.active').forEach(activeItem => {
                    activeItem.classList.remove('active');
                });
                
                // Add active class to clicked item
                this.classList.add('active');
                
                // For demonstration, show an alert
                const itemText = this.querySelector('.nav-text, .bottom-nav-text')?.textContent || 
                                this.textContent || 'Item';
                alert(`Navigating to ${itemText}`);
            });
        });
        
        // Add functionality to game buttons
        document.querySelectorAll('.play-button').forEach(button => {
            button.addEventListener('click', function(e) {
                e.stopPropagation(); // Prevent triggering parent click
                const gameTitle = this.parentElement.querySelector('.game-title').textContent;
                alert(`Loading ${gameTitle} game...`);
            });
        });
        
        // VIP Claim button functionality
        document.querySelector('.action-button').addEventListener('click', function() {
            alert('Redirecting to VIP deposit page...');
        });
        
        // Make the entire game card clickable
        document.querySelectorAll('.game-card').forEach(card => {
            card.addEventListener('click', function() {
                const gameTitle = this.querySelector('.game-title').textContent;
                alert(`Opening ${gameTitle}...`);
            });
        });
    </script>
